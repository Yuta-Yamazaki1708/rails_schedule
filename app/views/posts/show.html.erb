
  


<%if @post.is_all_day == true %>
  <% is_all_day = "⚪︎" %>
<% else %>
  <% is_all_day = " " %>
<% end %>
<div class="container">
  <div class="row">
    <h3 class="col">スケジュール詳細</h3>
    <button type="button" class="btn btn-primary" "col"><%= link_to "予定を編集する", edit_post_path %></button>
  </div>
<div class="table-responsive">
<table class="table">
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= I18n.l(@post.start_at) %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= I18n.l(@post.end_at) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= is_all_day %></td>
  </tr>
  <tr>
    <th>内容</th>
    <td><%= @post.content %></td>
  </tr>
</table>
</div>
<%= render "shared/to_index" %>
</div>


