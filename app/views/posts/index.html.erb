<h1>スケジュール一覧</h1>

<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.start_at %></td>
      <td><%= post.end_at %></td>
      <td><%= post.is_all_day %></td>
      <td><%= post.updated_at %></td>
      <td><%= link_to "詳細", post_path(post) %></td>
      <td><%= link_to "編集", edit_post_path(post) %></td>
      <td><%= link_to "削除", post_path(post), method: :delete, data: {confirm: "本当に削除しますか"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "新規スケジュール", new_post_path %></p>

