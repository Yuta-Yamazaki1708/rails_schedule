<%= form_with model: post do |f| %>
  <form>
    <div class="form-group">
      <%= f.label :title ,"タイトル" %><span>*</span>
      <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
    </div>
 
    <div class="row">
      <div class="form-group col">
        <%= f.label :start_at ,"開始日" %><span>*</span>
        <%= f.date_field :start_at, class:"form-control" %>
      </div>
      <div class="form-group col">
        <%= f.label :end_at ,"終了日" %><span>*</span>
        <%= f.date_field :end_at, class:"form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :is_all_day ,"終日" %>
      <%= f.check_box :is_all_day, class:"form-check" %>
    </div>
    
    <div class="form-group">
      <%= f.label :content ,"内容" %>
      <%= f.text_area :content, class:"form-control", placeholder:"メモを入力" %>
    </div>

    <div>
      <%= f.submit "保存", class:"btn btn-primary"%></li>
    </div>
  </form>
<% end %>