 <%= form_with model: @post do |f| %>
   <table>
     <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
 
     <tr>
       <th><%= f.label :start_at ,"開始日" %></th>
       <td><%= f.text_field :start_at, :class => 'datepicker' %></td>
     </tr>
 
     <tr>
       <th><%= f.label :end_at ,"終了日" %></th>
       <td><%= f.text_field :end_at, :class => 'datepicker' %></td>
     </tr>
 
     <tr>
       <th><%= f.label :is_all_day ,"終日" %></th>
       <td><%= f.check_box :is_all_day %></td>
     </tr>
     <tr>
       <th><%= f.label :content ,"内容" %></th>
       <td><%= f.text_area :content %></td>
     </tr>
   </table>
 
   <div>
     <ul>
       <li><%= f.submit "登録完了する"%></li>
     </ul>
   </div>
 <% end %>